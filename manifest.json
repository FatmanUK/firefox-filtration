{
  "manifest_version": 2,
  "name": "Firefox Filtration",
  "version": "0.1",
  "author": "Adam J. Richardson",
  "description": "Filter and auto-tag your bookmarks",
  "icons": {
    "48": "icons/icon48.jpg"
  },
  "browser_action" : {
    "browser_style": true,
    "default_popup": "html/config.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "32": "icons/icon32.jpg",
      "48": "icons/icon48.jpg"
    },
    "default_title": "Firefox Filtration"
  }
}
